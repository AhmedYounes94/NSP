#!/bin/bash
# pregenerate

set -Eeuo pipefail
set -x

./env/bin/python3 next_sentence_pred_finetune/pregenerate_data.py \
--train_corpus ./data/interim/transcripts.txt \
--bert_model bert-base-uncased \
--do_lower_case \
--output_dir ./data/processed/ \
--epochs_to_generate 3 \
--max_seq_len 256 \
--dev_frac 0.2